# ============================================
# BASE DE DATOS
# ============================================
# URL de conexión a la base de datos MySQL
# Formato: mysql://usuario:contraseña@host:puerto/nombre_bd
DATABASE_URL="mysql://root:password@localhost:3306/nombre_base_datos"

# ============================================
# JWT - AUTENTICACIÓN
# ============================================
# Clave secreta para firmar los tokens JWT
# IMPORTANTE: En producción, usa una clave segura de al menos 32 caracteres
# Genera una clave segura con: openssl rand -base64 32
JWT_SECRET=tu-clave-secreta-muy-segura-minimo-32-caracteres-cambiar-en-produccion

# Tiempo de expiración del token de acceso (formato: número + unidad)
# Unidades válidas: s (segundos), m (minutos), h (horas), d (días)
# Ejemplos: 15m, 1h, 3600s
JWT_ACCESS_EXPIRES_IN=15m

# Tiempo de expiración del token de refresco (formato: número + unidad)
# Unidades válidas: s (segundos), m (minutos), h (horas), d (días)
# Ejemplos: 7d, 30d, 604800s
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SERVIDOR
# ============================================
# Puerto en el que correrá el servidor
PORT=3000

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# ============================================
# SEED - DATOS INICIALES (Opcional)
# ============================================
# Credenciales del usuario administrador inicial
# Solo se usan cuando ejecutas: npm run seed
# Si no se configuran, se usarán los valores por defecto:
#   - Email: admin@example.com
#   - Contraseña: Admin123!@#
#   - Nombre: Administrator
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin123!@#
ADMIN_NAME=Administrator

# ============================================
# EMAIL - ENVÍO DE CORREOS
# ============================================
# Configuración del servidor SMTP para envío de emails
# 
# Para Gmail:
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   SMTP_SECURE=false
#   SMTP_USER=tu-email@gmail.com
#   SMTP_PASS=tu-app-password (requiere habilitar verificación en 2 pasos y crear contraseña de aplicación)
# 
# Para SendGrid:
#   SMTP_HOST=smtp.sendgrid.net
#   SMTP_PORT=587
#   SMTP_SECURE=false
#   SMTP_USER=apikey
#   SMTP_PASS=tu-api-key-de-sendgrid
# 
# Para Mailgun:
#   SMTP_HOST=smtp.mailgun.org
#   SMTP_PORT=587
#   SMTP_SECURE=false
#   SMTP_USER=postmaster@tu-dominio.mailgun.org
#   SMTP_PASS=tu-password-de-mailgun
# 
# Para desarrollo local (Mailtrap, MailHog, etc):
#   SMTP_HOST=localhost (o la IP de tu servicio de prueba)
#   SMTP_PORT=1025 (o el puerto de tu servicio)
#   SMTP_SECURE=false
#   SMTP_USER= (opcional)
#   SMTP_PASS= (opcional)

# Servidor SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Credenciales SMTP
SMTP_USER=
SMTP_PASS=

# Email del remitente
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Sistema

# URL del frontend (donde el usuario hará clic en los emails)
# Ejemplos: http://localhost:5173 (Vite), http://localhost:3000 (Next.js), https://mi-app.com
FRONTEND_URL=http://localhost:5173
# URL del backend (opcional, se construye automáticamente si no se define)
# Ejemplos: http://localhost:3000, https://api.mi-app.com
BACKEND_URL=http://localhost:3000

# ============================================
# STORAGE - ALMACENAMIENTO DE ARCHIVOS
# ============================================
# Configuración del sistema de storage para archivos
# 
# Opciones:
#   - 'local': Almacenamiento en filesystem local (desarrollo)
#   - 's3': AWS S3 (producción)
STORAGE_TYPE=local

# Storage Local (cuando STORAGE_TYPE=local)
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=/uploads

# Storage S3 (cuando STORAGE_TYPE=s3)
# Requiere instalar: npm install @aws-sdk/client-s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_S3_BASE_URL=

# ============================================
# LOGGING - SISTEMA DE LOGS
# ============================================
# Configuración del sistema de logging
# 
# Nivel de logging:
#   - error: Solo errores críticos
#   - warn: Advertencias y errores
#   - info: Información general (recomendado para producción)
#   - debug: Información detallada (solo desarrollo)
LOG_LEVEL=info

# Directorio donde se guardan los archivos de log
# Los logs se organizan automáticamente por día
LOG_DIR=./logs
